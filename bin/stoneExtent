#! /bin/bash

#=========================================================================
# Copyright (c) 2014 GemTalk Systems, LLC <dhenrich@gemtalksystems.com>.
#
# Name - stoneExtent
#
# Purpose - Copy a new extent in the stone's extent directory. Stone
#           should be shutdown before copying.
#
# Examples
#   stoneExtent -h
#   stoneExtent kit
#
#=========================================================================

# help function
function display_help() {
  echo ""
  echo "USAGE: $(basename $0) [-h] <stone-name>"
  echo "Copy a new extent into the stone's extent directory. Stone"
  echo "should be shutdown before copying."
  echo ""
  echo "OPTIONS"
  echo "  -h display help"
  echo ""
  echo "EXAMPLES"
  echo "  $(basename $0) -h"
  echo "  $(basename $0) kit"
  echo ""
}

while getopts "h" OPT ; do
  case "$OPT" in
    h) 
      display_help
      exit 1
      ;;
    *)
      display_help
      exit 1
      ;;
  esac
done

if [ "$1x" = "x" ] ; then
  display_help
  exit 1
fi
stoneName=$1

if [ "${GS_HOME}x" = "x" ] ; then
  echo "the GS_HOME environment variable needs to be defined"
  exit 1
fi

echo "starting copy"

# set up stone environment
stonePath=$GS_HOME/gemstone/stones/$stoneName
pushd $stonePath >& /dev/null
source $stonePath/stone.env
popd $stonePath >& /dev/null

# copy the extent
$GS_HOME/bin/tode newExtent $stoneName
if [[ $? != 0 ]] ; then exit 1; fi

# End of script
exit 0
