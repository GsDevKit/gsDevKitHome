#=========================================================================

echo "================="
echo "   GsDevKit script: $(basename $0) $*"
echo "================="

usage() {
  cat <<HELP
USAGE: $(basename $0) [-h]] [-p <postfix>]

Update the tODE client image.

OPTIONS
  -h 
     display help
  -p <postfix>
     Update the tode client image created with a matching postfix.

EXAMPLES
  $(basename $0) -h
  $(basename $0)
  $(basename $0) -p _0   # Updates the image named todeClient_0.image

HELP
}

postFix=""
while getopts "hp:" OPT ; do
  case "$OPT" in
    h) usage; exit 0 ;;
    p) postFix="${OPTARG}" ;;
    *) usage; exit 1 ;;
  esac
done
shift $(($OPTIND - 1))

set -e # exit on error
if [ "${GS_HOME}x" = "x" ] ; then
  echo "the GS_HOME environment variable needs to be defined"
  exit 1
fi

todeLoadPath=$GS_HOME/tode/sys/default/pharo/todeLoad.st
if [ -e $GS_HOME/tode/sys/local/pharo/todeLoad.st ] ; then
  todeLoadPath=$GS_HOME/tode/sys/local/pharo/todeLoad.st
fi

echo "updating todeClient${postFix} image using $todeLoadPath"

pharo=$GS_HOME/pharo

if [ ! -e $pharo/todeClient${postFix}.image ] ; then
  $GS_HOME/bin/createTodeImage -p ${postFix}
fi

$pharo/pharo $pharo/todeClient${postFix}.image save todeClientTmp

$pharo/pharo $pharo/todeClientTmp.image st --quit --save $todeLoadPath

$pharo/pharo $pharo/todeClientTmp.image save todeClient${postFix}

rm -f todeClientTmp.*
echo
echo "tODEClient${postFix} image update complete"
