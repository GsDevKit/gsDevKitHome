#! /bin/bash

#=========================================================================
# Copyright (c) 2014 GemTalk Systems, LLC <dhenrich@gemtalksystems.com>.
#
# Name - updateTodeImage
#
# Purpose - Update the tODE client image
#
# Examples
#   updateTodeImage -h
#   updateTodeImage -p _0
#   updateTodeImage
#
#=========================================================================

# help function
function display_help() {
  echo ""
  echo "USAGE: $(basename $0) [-h]] [-p <postfix>]"
  echo "Update the tODE client image."
  echo ""
  echo "OPTIONS"
  echo "  -h "
  echo "    display help"
  echo "  -p <postfix>"
  echo "   Update the tode client image created with a matching postfix."
  echo ""
  echo "EXAMPLES"
  echo "  $(basename $0) -h"
  echo "  $(basename $0)"
  echo ""
}

postFix=""
while getopts "hp:" OPT ; do
  case "$OPT" in
    h) 
      display_help
      exit 1
      ;;
    p)
      postFix="${OPTARG}"
      ;;
    *)
      display_help
      exit 1
      ;;
  esac
done

if [ "${GS_HOME}x" = "x" ] ; then
  echo "the GS_HOME environment variable needs to be defined"
  exit 1
fi

echo "Updating todeClient image"

pharo=$GS_HOME/pharo
$pharo/pharo $pharo/todeClient${postFix}.image save todeClientTmp

cat - > $pharo/todeLoad.st << EOF
[ | metacello |
  metacello := Metacello new
    configuration: 'TodeClient';
    version: #release;
    repository: 'filetree://$GS_HOME/repository'.
  metacello copy get
  metacello load ]
      on: Warning
      do: [:ex | Transcript cr; show: ex description ].
EOF

$pharo/pharo $pharo/todeClientTmp.image st --quit --save $pharo/todeLoad.st
if [[ $? != 0 ]] ; then
  echo "updateTodeImage[Error]: failed loading tode client"
  exit 1
fi

$pharo/pharo $pharo/todeClientTmp.image save todeClient${postFix}
if [[ $? != 0 ]] ; then
  echo "updateTodeImage[Error]: failed saving tode client"
  rm -f todeClient*
  exit 1
fi

rm -f todeClientTmp.*
echo
echo "tODE client image update complete"

# End of script
exit 0
