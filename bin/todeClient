#! /bin/bash

#=========================================================================
# Copyright (c) 2014 GemTalk Systems, LLC <dhenrich@gemtalksystems.com>.
#
# Name - todeClient 
#
# Purpose - Launch todeClient image
#
# Examples
#   todeClient -h
#   todeClient
#
#=========================================================================

# help function
function display_help() {
  echo ""
  echo "USAGE: $(basename $0) [-h]"
  echo "Launch todeClient image."
  echo ""
  echo "OPTIONS"
  echo "  -h display help"
  echo ""
  echo "EXAMPLES"
  echo "  $(basename $0) -h"
  echo "  $(basename $0)"
  echo ""
}

while getopts "h" OPT ; do
  case "$OPT" in
    h) 
      display_help
      exit 1
      ;;
    *)
      display_help
      exit 1
      ;;
  esac
done

if [ "${GS_HOME}x" = "x" ] ; then
  echo "the GS_HOME environment variable needs to be defined"
  exit 1
fi
if [ ! -e "$GS_HOME/pharo/pharo" ]; then
  $GS_HOME/bin/installPharo
fi

# Run script
pharo=$GS_HOME/pharo
unset GEMSTONE_NRS_ALL
$pharo/pharo-ui $pharo/todeClient.image &

# End of script
exit 0
