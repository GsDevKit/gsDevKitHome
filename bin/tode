#! /bin/bash

#=========================================================================
# Copyright (c) 2014 GemTalk Systems, LLC <dhenrich@gemtalksystems.com>.
#
# Name - tode 
#
# Purpose - Run headless tode scripts using the todeClient image
#
# Examples
#   tode -h
#   tode --help
#   tode createStone --help
#
#=========================================================================

# help function
function display_help() {
  echo ""
  echo "USAGE: $(basename $0) [-h]"
  echo "Run headless tode scripts using the todeClient image."
  echo ""
  echo "OPTIONS"
  echo "  -h display help"
  echo ""
  echo "EXAMPLES"
  echo "  $(basename $0) -h"
  echo "  $(basename $0)"
  echo ""
}

case "$1" in
  --*) # pass to tode
    ;;
  -*) # handle single - options here
    while getopts "h" OPT ; do
      case "$OPT" in
        h) 
          display_help
          exit 1
          ;;
      esac
    done
    ;;
  *)  # pass everything else to tode
    ;;
esac

if [ "${GS_HOME}x" = "x" ] ; then
  echo "the GS_HOME environment variable needs to be defined"
  exit 1
fi
if [ ! -e "$GS_HOME/pharo/pharo" ]; then
  $GS_HOME/bin/installPharo
fi

# Run script
pharo=$GS_HOME/pharo
$pharo/pharo $pharo/todeClient.image $*

# End of script
exit 0
