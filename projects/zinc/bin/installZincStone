usage() {
  cat <<HELP
USAGE: $(basename $0) [-h] <stone-name>
Load Zinc into <stone-name>. 

tODE must be installed before running this script.

OPTIONS
  -h show usage

EXAMPLES
  $(basename $0) -h
  $(basename $0) zinc

HELP
}

set -e # exit on error
if [ "${GS_HOME}x" = "x" ] ; then
  echo "the GS_HOME environment variable needs to be defined"; exit 1
fi
source ${GS_HOME}/bin/shFunctions

getOpts_help $@ #parse standard (-h) options

if [ $# -ne 1 ]; then
  usage; exit 1
fi

stoneName="$1"

$GS_HOME/bin/tode todeIt $stoneName << EOF
mount @/sys/stone/dirs/gsDevKitHome/projects/zinc /home zinc # mount the zinc directory in tODE
/home/zinc/install
EOF
